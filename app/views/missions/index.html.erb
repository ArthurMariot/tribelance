
<div class="container">

<div class="missions">
  <% @missions.each do |mission| %>
  <div class="card-mission">

    <div class="card-mission-img">
      <img src= "<%= mission.logo %>" alt="" class="logo-sm">
    </div>
    <div class="card-mission-title">
      <h4> <%= mission.title %> </h4>
    </div>
    <div class="card-mission-info">
      <p> <%= mission.daily_price %> $ </p>
      <p> <%= mission.num_of_days %> days </p>
    </div>
  </div>
  <% end %>

</div>

