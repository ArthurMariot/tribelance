<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky" id="navbar-white">
  <a class="navbar-brand" href="/">
    <%= image_tag "logo-color.png" %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <div class="nav-center">
        <a href="<%= missions_path %>">Find a mission</a>
        <a href="<%= new_mission_path %>">Find a freelance</a>
        <% if current_user.nil? %>
          <a class="btn-blue-navbar" href="<%= new_user_session_path %>">Login</a>
        <% else %>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= current_user.avatar %>" />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user.missions.first.nil? %>
            <% else %>
            <a class="dropdown-item" href="<%= missions_dashboard_path%>"> <%= "My dashboard" %></a>
            <% end %>
            <% if current_user.candidatures.first.nil? %>
            <% else %>
            <a class="dropdown-item" href="<%= dashboard_candidatures_path %>"> <%= "My applications" %>
              <% end %>
          </a>
          <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "dropdown-item") %>
        </div>
        <% end %>
      </div>
    </ul>
  </div>
</div>
