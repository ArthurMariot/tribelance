<%= simple_form_for [@mission, @candidature] do |f| %>

  <% if @candidature.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @candidature.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


    <div class="form-inputs">
    <%= f.input :user_id %>      <!-- a modifier avec le current user en attente de pundit -->
    <%= f.input :cover_letter %>
    <%= f.input :start %>
    <%= f.input :end %>
   <%= @mission.daily_price %> per day
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
