<div class="form-blue">
   <h2>Apply</h2>

  <%= simple_form_for [@mission, @candidature] do |f| %>

    <% if @candidature.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @candidature.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


      <div class="form-inputs">
      <%= f.input :cover_letter, as: :text, label: "Explain why you're the best for this mission:" %>
      <%= f.input :start_date, as: :string, required: false, :start_year => Date.today.year, :order => [:day, :month, :year], input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, :end_year => Date.today.year, :order => [:day, :month, :year], input_html: {class: "datepicker"} %>
      <%= @mission.daily_price %> $ per day
    </div>

    <div class="form-actions">
      <%= f.button :submit, value: "Let's go !"%>
    </div>
  <% end %>

</div>
